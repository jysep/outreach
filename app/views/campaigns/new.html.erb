<h3 class="card-title">Create Campaign</h3>
<%= form_tag(campaigns_path) do %>
	<div class="form-group">
		<label for="name">Campaign Name (Location, Time)</label>
		<input type="text" name="name" id="name" placeholder="Name" class="form-control col-sm-4" />
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Create</button>
	</div>
<% end %>
